
          <div class="card mt-4">
            <%= image_tag @ad.picture(:large), class:"card-img-top img-fluid" %>
            <div class="card-body">
              <h3 class="card-title"><%= @ad.title %></h3>
              <h4><%= humanized_money_with_symbol @ad.price %></h4>
              <p class="card-text"><%= @ad.description.html_safe %></p>
              <%= rating_for @ad, 'quality' %>
              <p class="pull-right"><%= @ad.rates("quality").count %> Avaliações</p>
              
              
            </div>
          </div>
          <div class="card card-outline-secondary my-4">
            <div class="card-header">
              <%= @ad.comments.count %> Comentários
              <% if member_signed_in? %>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#comentsModal">
                  Deixe um comentário
                </button>
                <% else %>
                <%= link_to  "Efetue login para comentar", new_member_session_path, class:"btn btn-success pull-right"  %>
              <% end %>

            </div>
            <%= render partial: "site/ad_detail/comments"%>
          </div>
          <!-- /.card -->

