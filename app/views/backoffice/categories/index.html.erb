<h1 class="page-header"><%= @categories.model.model_name.human(count: @categories.count)%></h1>
    <div class="panel panel-default">
    <div class="panel-heading">
                            Listando categorias
                             <%= link_to new_backoffice_category_path, class:"btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                                <i class="fa fa-plus"></i>                            
                             <% end %>  
                             <%= link_to backoffice_categories_path(format: :pdf), class:"btn btn-danger btn-circle pull-right", style: "margin-top: -5px; margin-right: 5px" do %>
                                <i class="fa fa-file-pdf-o"></i>                            
                             <% end %>  
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                             <tr>
                                <th>#</th>
                                <th><%= @categories.model.human_attribute_name('description')%></th>
                                <th></th>
                                            
                            </tr>
                            </thead>
                            <tbody>
                            <% @categories.each do |category| %>                                          
                            <tr>
                                <td><%= category.id %></td>
                                <td><%= category.description %></td>  
                                <td style= "width: 100px"> 
                                    <%= link_to edit_backoffice_category_path(category.id), class:"btn btn-primary btn-circle" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    <%= link_to '#', class:"btn btn-danger btn-circle", disabled: "true" do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %> 
                                </td>                                          
                            </tr>
                        <% end %>                                       
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
                   
            
