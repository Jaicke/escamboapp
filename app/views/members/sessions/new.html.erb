
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Entrar</h5>            
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"form-signin"}) do |f| %>
              <div class="form-label-group">                
                 <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control", placeholder:"EndereÃ§o de E-mail" %>                                      
                 <%= f.label :email, html: { for:"inputEmail" } %>                
              </div>

              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "current-password",  class: "form-control", placeholder: "Senha" %>
                <%= f.label :password, html: { for:"password" } %>                 
              </div>

              <div class="custom-control custom-checkbox mb-3">
                
                 <% if devise_mapping.rememberable? -%>                    
                        <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck1" %>
                <% end %>
                <label class="custom-control-label" for="customCheck1">Lembrar Senha</label>
              </div>              
              <%= f.submit "Entrar", class:"btn btn-lg btn-primary btn-block text-uppercase"%>
              <%= link_to  "Cadastrar-se", new_member_registration_path, class:"d-block text-center mt-2 small" %>
              <%= link_to  "Esqueceu a senha?", new_member_password_path, class:"d-block text-center mt-2 small" %>

              <hr class="my-4">
              <button class="btn btn-lg btn-google btn-block text-uppercase" ><%= fa_icon "google mr-2"%></i> Sign in with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase"><%= fa_icon "facebook-f mr-2"%></i> Sign in with Facebook</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
