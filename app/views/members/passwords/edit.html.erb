  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5">
          <div class="card-img-left d-none d-md-flex">
             <!-- Background image for card set in CSS! -->
          </div>
          <div class="card-body">
            <h5 class="card-title text-center">Mude sua senha</h5>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.hidden_field :reset_password_token %>
              <div class="form-label-group">
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Nova senha" %>
                <%= f.label :password %>
              </div>
              
              <div class="form-label-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"ConfirmaÃ§Ã£o nova senha" %>
                <%= f.label :password_confirmation %>
              </div>

              
              <%= f.submit "Salvar", class:"btn btn-lg btn-primary btn-block text-uppercase" %>
              
              <hr class="my-4">
              <%= render "members/shared/links" %>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


<% flash.each do |key, value|%>
    <%= javascript_tag "$.notify({ message: '#{alert}' }, { type: 'danger', placement: { from: 'top', align: 'center'}});" %>   
<% end %>

<% unless devise_error_messages!.blank? %>
    <% resource.errors.full_messages.each do |message| %>
       <%= javascript_tag "$.notify({ message: '#{message}' }, { type: 'danger', placement: { from: 'top', align: 'center'}});" %>
    <% end %>
<% end %>    