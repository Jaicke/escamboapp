<div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">                        
                        <%= form_for(resource, as: resource_name, role: "form", url: session_path(resource_name)) do |f| %>
                            <fieldset>
                                <div class="form-group">
                                    
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"E-mail",  type:"email" %>

                                </div>
                                <div class="form-group">
                        
                                    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password", type:"password" %>

                                </div>
                                <div class="checkbox">
                                    <% if devise_mapping.rememberable? -%>
                                    <label>                                        
                                         <%= f.check_box :remember_me %>Remember Me
                                    </label>
                                    <% end %>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <div class="actions">
                                    <%= f.submit "Log in", class:"btn btn-lg btn-success btn-block" %>
                                </div>
                                <%#= render "admins/shared/links" %>
                            </fieldset>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
